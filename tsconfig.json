  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES6", "DOM"],
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [ "client/src/**/*" ],
  "exclude": [ "node_modules" ]
}